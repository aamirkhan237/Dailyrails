<div class="row">
  <div class="col-md-8 mb-4">
    <div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-0">Billing details</h5>
      </div>
      <div class="card-body">
        <%= form_for address, url: addresses_path(product_id: @product&.id), method: :post do |f| %> 
          <!-- Form fields for the new address -->
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <%= f.text_field :name, class: "form-control", id: "form7Example1" %>
                <%= f.label :Line1, class: "form-label", for: "form7Example1" %>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <%= f.text_field :street, class: "form-control", id: "form7Example2" %>
                <%= f.label :street, class: "form-label", for: "form7Example2" %>
              </div>
            </div>
          </div>

          <!-- Text input for City -->
          <div class="form-outline mb-4">
            <%= f.text_field :city, class: "form-control", id: "form7Example3" %>
            <%= f.label :city, class: "form-label", for: "form7Example3" %>
          </div>

          <!-- Text input for State -->
          <div class="form-outline mb-4">
            <%= f.text_field :state, class: "form-control", id: "form7Example4" %>
            <%= f.label :state, class: "form-label", for: "form7Example4" %>
          </div>

          <!-- Text input for Zip -->
          <div class="form-outline mb-4">
            <%= f.text_field :zip, class: "form-control", id: "form7Example5" %>
            <%= f.label :zip, class: "form-label", for: "form7Example5" %>
          </div>

          <!-- Submit button -->
          <%= f.submit "Add Address", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
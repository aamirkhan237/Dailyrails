<%= render 'nav'%>
<h1 style="text-align: center; margin-top: 20px;" >Products</h1>

<div class="table-responsive">
  <table class="table table-striped">
<thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <p><%= current_user.role %></p>
       <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.name, product_path(product) %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          
            <% if can? :edit, product %>
          <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary btn-sm' %></td>
             <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if can? :create, Product %>
  <%= link_to 'New Product', new_product_path, class: 'btn btn-success' %>
<% end %>
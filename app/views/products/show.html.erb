<%= render 'nav'%>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="mb-4"><%= @product.name %></h1>
<div>

   <% if @product.active? %>

        <% if @product.image.attached? %>
         <%= image_tag @product.image, style: "width:200px;" %>
          <%end%>
        
      <p><strong>Description:</strong> <%= @product.description %></p>
      <p><strong>Price:</strong> <%= @product.price %></p>
      

<div id="<%= dom_id @product %>">
  <%= form_with(url: cart_add_path) do |f| %>
      <%= f.hidden_field :id, value: @product.id %>
      <%= f.number_field :quantity, value: 0, min: 1 %>
      <%= f.submit "Add To Cart" %>
    <% end %>
  </div>
<% end %>
<div class="mb-4">        
  <% if can? :edit, @product %>
      <td><%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary btn-sm' %></td>
  <% end %>

<%= link_to 'Back', products_path, class: "btn btn-secondary ms-2 mt-2" %>
      </div>
    </div>
  </div>
</div>

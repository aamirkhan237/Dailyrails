<%= render 'nav' %>
<h1 style="text-align: center; margin-top: 20px;">Products</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="card">
        <div class="bg-image hover-overlay" data-mdb-ripple-init data-mdb-ripple-color="light">
          <%= link_to product_path(product) do %>
            <%= image_tag product.image, class: "img-fluid" %>
            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
          <% end %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.description %></p>
          <p class="card-text"><strong>Price:</strong> <%= product.price %></p>
          <% if can? :edit, product %>
            <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary btn-sm' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if can? :create, Product %>
  <%= link_to 'New Product', new_product_path, class: 'btn btn-success' %>
<% end %>


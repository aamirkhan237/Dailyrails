<div class="container text-center mt-4">
  <h1 >Pages#home</h1>
  <p class="text-center">Find me in app/views/pages/home.html.erb</p>

  <% if current_user %>
    <div>
      <h2>Welcome, <%= current_user.email %></h2>
      <%= link_to "Edit Account", edit_user_registration_path, class: "btn btn-primary" %>
      <%= link_to "Admin", admin_root_path, class: "btn btn-info mt" %>
      <%= link_to "Products", products_path, class: "btn btn-success mt" %>
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger mt-2", data: { turbo: "false" } %>
    </div>
<% if current_user.role == 'vendor' %>
      <p>You are logged in as a vendor.</p>
    <% else %>
      <p>You are logged in as a regular user.</p>
    <% end %>
     
  <% else %>
    <div>
      <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
      <%= link_to "Create Account", new_user_registration_path, class: "btn btn-success" %>
      <%= link_to "Products", products_path, class: "btn btn-success mt" %>
    </div>
  <% end %>
  <% unless current_user.nil? %>
    <table class="table mt-4">
      <thead>
        <tr>
          <th>Email</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% User.where.not(id: current_user.id).each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td>
        </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>


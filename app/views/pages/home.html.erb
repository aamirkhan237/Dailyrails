<div class="container text-center mt-4">
  <h1 >Pages#home</h1>
  <p class="text-center">Find me in app/views/pages/home.html.erb</p>

  <% if current_user %>
    <div>
      <h2>Welcome, <%= current_user.email %></h2>
      <%= link_to "Edit Account", edit_user_registration_path, class: "btn btn-primary" %>
      
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger mt-2", data: { turbo: "false" } %>
    </div>
  <% else %>
    <div>
      <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
      <%= link_to "Create Account", new_user_registration_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
